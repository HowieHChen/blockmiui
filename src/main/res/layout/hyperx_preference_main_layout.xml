<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/hyperx_preference_item_min_height"
    android:paddingStart="@dimen/miuix_preference_main_margin_start"
    android:paddingEnd="@dimen/miuix_preference_main_margin_end">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/miuix_preference_main_icon_min_width"
        android:layout_marginEnd="@dimen/miuix_preference_main_icon_padding_end">
        <ImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@android:id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            style="@style/Widget.PreferenceIcon.Navigation" />
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        style="@style/Widget.PreferenceItem">
        <TextView
            android:textAppearance="@style/HyperX.TextAppearance.PreferenceList"
            android:ellipsize="end"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textAlignment="viewStart"
            android:hyphenationFrequency="full" />
        <TextView
            android:textAppearance="@style/HyperX.TextAppearance.List.Secondary.Preference"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/miuix_preference_summary_margin_top"
            android:layout_below="@android:id/title"
            android:textAlignment="viewStart"
            android:layout_alignStart="@android:id/title" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@android:id/widget_frame"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/miuix_preference_widget_width" />
    <ImageView
        android:gravity="center"
        android:layout_gravity="center|end"
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hyperx_preference_item_padding_inner"
        android:src="@drawable/hyperx_intent_arrow_right"/>
</LinearLayout>
