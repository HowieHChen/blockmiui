<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/hyperx_item_touch_enter_duration"
    android:exitFadeDuration="@integer/hyperx_item_touch_exit_duration">
    <item android:state_pressed="true"
        android:drawable="@color/item_touch_color"/>
