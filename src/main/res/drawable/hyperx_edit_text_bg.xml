<?xml version="1.0" encoding="utf-8"?>
<level-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:minLevel="0"
        android:maxLevel="1">
        <layer-list>
            <item>
                <selector
                    android:enterFadeDuration="200"
                    android:exitFadeDuration="200">
                    <item android:state_focused="true">
                        <dev.lackluster.hyperx.smooth.SmoothContainerDrawable2
                            android:radius="@dimen/hyperx_edit_text_border_radius_size">
                            <child>
                                <shape android:shape="rectangle">
                                    <solid android:color="@color/hyperx_edit_text_border_color" />
                                </shape>
                            </child>
                        </dev.lackluster.hyperx.smooth.SmoothContainerDrawable2>
                    </item>
                    <item>
                        <dev.lackluster.hyperx.smooth.SmoothContainerDrawable2
                            android:radius="@dimen/hyperx_edit_text_border_radius_size">
                            <child>
                                <shape android:shape="rectangle">
                                    <solid android:color="@color/hyperx_transparent" />
                                </shape>
                            </child>
                        </dev.lackluster.hyperx.smooth.SmoothContainerDrawable2>
                    </item>
                </selector>
            </item>
            <item
                android:left="@dimen/hyperx_edit_text_border_size"
                android:top="@dimen/hyperx_edit_text_border_size"
                android:right="@dimen/hyperx_edit_text_border_size"
                android:bottom="@dimen/hyperx_edit_text_border_size">
                <dev.lackluster.hyperx.smooth.SmoothContainerDrawable2
                    android:radius="@dimen/hyperx_edit_text_radius_size">
                    <child>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/hyperx_edit_text_bg_color" />
                            <padding
                                android:left="@dimen/hyperx_edit_text_padding_horizontal"
                                android:top="@dimen/hyperx_edit_text_padding_vertical"
                                android:right="@dimen/hyperx_edit_text_padding_horizontal"
                                android:bottom="@dimen/hyperx_edit_text_padding_vertical" />
                        </shape>
                    </child>
                </dev.lackluster.hyperx.smooth.SmoothContainerDrawable2>
            </item>
        </layer-list>
    </item>
    <item
        android:minLevel="404"
        android:maxLevel="404">
        <layer-list>
            <item>
                <selector
                    android:enterFadeDuration="200"
                    android:exitFadeDuration="200">
                    <item>
                        <dev.lackluster.hyperx.smooth.SmoothContainerDrawable2
                            android:radius="@dimen/hyperx_edit_text_border_radius_size">
                            <child>
                                <shape android:shape="rectangle">
                                    <solid android:color="@color/hyperx_edit_text_border_color_error" />
                                </shape>
                            </child>
                        </dev.lackluster.hyperx.smooth.SmoothContainerDrawable2>
                    </item>
                </selector>
            </item>
            <item
                android:left="@dimen/hyperx_edit_text_border_size"
                android:top="@dimen/hyperx_edit_text_border_size"
                android:right="@dimen/hyperx_edit_text_border_size"
                android:bottom="@dimen/hyperx_edit_text_border_size">
                <dev.lackluster.hyperx.smooth.SmoothContainerDrawable2
                    android:radius="@dimen/hyperx_edit_text_radius_size">
                    <child>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/hyperx_edit_text_bg_color" />
                            <padding
                                android:left="@dimen/hyperx_edit_text_padding_horizontal"
                                android:top="@dimen/hyperx_edit_text_padding_vertical"
                                android:right="@dimen/hyperx_edit_text_padding_horizontal"
                                android:bottom="@dimen/hyperx_edit_text_padding_vertical" />
                        </shape>
                    </child>
                </dev.lackluster.hyperx.smooth.SmoothContainerDrawable2>
            </item>
        </layer-list>
    </item>
</level-list>
